---
import "../styles/global.css";
const nav = [
    {href: "#leistungen", label: "Leistungen"},
    {href: "#kontakt", label: "Kontakt"},
    {href: "#impressum", label: "Impressum"},
    {href: "#datenschutz", label: "Datenschutz"},
];
---
<html lang="de" class="h-full scroll-smooth">
<head>
    <title>MS-Konzept</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <script is:inline src="/reveal.js" defer/>
</head>
<body class="min-h-screen flex flex-col bg-gray-50 text-gray-900">
<header class="sticky top-0 z-20 border-b bg-white/70 backdrop-blur">
    <nav class="mx-auto max-w-6xl px-4 py-3 flex items-center justify-between">
        <a href="/" class="text-lg font-semibold">MS-Konzept</a>
        <ul class="flex gap-5 text-sm">
            {nav.map(n =>
                    <li><a class="hover:text-gray-600" href={n.href}>{n.label}</a></li>)}
        </ul>
    </nav>
</header>
<main class="flex-1">
    <slot/>
</main>
<footer class="border-t bg-white">
    <div class="mx-auto max-w-6xl px-4 py-10 text-sm text-gray-600 flex flex-col sm:flex-row gap-3 sm:items-center sm:justify-between">
        <p>© {new Date().getFullYear()} MS-Konzept - Bau & Grünpflege aus einer Hand</p>
    </div>
</footer>
<button id="scrollTopBtn" aria-label="Nach oben">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"
         stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5 15l7-7 7 7"/>
    </svg>
</button>
<script is:inline src="/scrollTop.js" defer/>
</body>
</html>
