---
import Base from "../layouts/Base.astro";
---

<Base>
    <fragment slot="head">
        <title>Kontakt – Unkrautbeseitigung</title>
    </fragment>

    <section class="mx-auto max-w-6xl px-4 py-14">
        <h1 class="text-3xl font-semibold">Kontakt</h1>
        <p class="mt-3 text-gray-600">Schreiben Sie uns – wir melden uns zeitnah.</p>

        <div class="mt-8 grid gap-6 md:grid-cols-2">
            <div class="rounded-2xl border bg-white p-6">
                <h3 class="font-medium">Direkt</h3>
                <p class="mt-2 text-sm text-gray-700">
                    Telefon: <a class="underline" href="tel:+491701234567">+49 170 1234567</a><br/>
                    E-Mail: <a class="underline" href="mailto:hallo@unkrautfrei.de">hallo@unkrautfrei.de</a><br/>
                    Einsatzgebiet: Leipzig & Umgebung
                </p>
            </div>

            <form class="rounded-2xl border bg-white p-6 grid gap-4" netlify>
                <input class="border rounded-xl px-3 py-2" name="name" placeholder="Ihr Name" required />
                <input class="border rounded-xl px-3 py-2" name="email" type="email" placeholder="E-Mail" required />
                <textarea class="border rounded-xl px-3 py-2 min-h-28" name="message" placeholder="Nachricht (Fläche, Ort, Terminwunsch)"></textarea>
                <button class="rounded-xl px-4 py-2 bg-black text-white hover:bg-gray-800" type="submit">Senden</button>
            </form>
        </div>
    </section>
</Base>
